{
  "name": "redux-anecdotes",
  "private": true,
  "version": "0.2.0",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "server": "json-server -p3001 --watch db.json --host 0.0.0.0 ",
    "server:ci": "json-server -p3001 --watch db.json --host fullstack-open-par11-based-part6.onrender.com ",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "test:e2e": "playwright test",
    "preview": "concurrently \"npm run server\" \"vite preview --host --port 5173\" \"wait-on http://localhost:5173\" ",
    "preview:ci": "concurrently \"npm run server:ci\" \"vite preview --host --port 5173\" ",
    "start": "concurrently \"npm run server\" \"npm run dev\" "
  },
  "dependencies": {
    "@playwright/test": "^1.53.1",
    "@reduxjs/toolkit": "^2.5.0",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.1",
    "axios": "^1.7.9",
    "cors": "^2.8.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.1.3",
    "redux": "^4.2.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.0.3",
    "concurrently": "^9.2.0",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "json-server": "^1.0.0-beta.3",
    "vite": "^4.4.5",
    "wait-on": "^8.0.3"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
